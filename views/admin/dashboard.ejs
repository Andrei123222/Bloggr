<div class="admin-title">
    <h2>Posts</h2>
    <a href="/add-post" class="btn btn-primary">+ Add new post</a>
</div>

<ul class="admin-posts">
    <% data.forEach(post => { %>
        <li>
            <a href="/post/<%= post._id %>">
                <%= post.title %> &nearr;
            </a>
            <div class="admin-post-controls">
                <a class="btn btn-primary" href="/edit-post/<%= post._id %>">Edit</a>

                <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
                    <input type="submit" value="Delete" class="btn btn-primary">
                </form>
            </div>
        </li>
    <% }) %>
</ul>